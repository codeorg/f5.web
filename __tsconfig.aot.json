{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": [
      //"es6-shim",
      "node"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useCache": true,
    "useBabel": true,
    "babelCore": "babel-core"
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true,
    "debug": true,
    "trace": true
  },
  "compileOnSave": false,
  "files": [
    "app/app.module.ts",
    "app/sub/sub.module.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
