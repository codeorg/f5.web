{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "/dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "noEmitHelpers": false
  },
  "files": [
    "app/app.module.ts",
    "app/sub/sub.module.ts"
  ],
  "awesomeTypescriptLoaderOptions": {

    "forkChecker": true,
    "useCache": true,
    "useBabel": true,
    "babelCore": "babel-core"
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true,
    "debug": false
  }
}
